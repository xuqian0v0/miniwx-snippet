/* pages/addressList/addressList.wxss */
.page-address-list {
  position: relative;
}

.fix-title {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background-color: #fff;
  color: #09bb07;
  border-bottom: 1px solid #f5f5f5;
  padding-left: 32rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  z-index: 10;
}

.scroll-view {
  height: 100vh;
  font-size: 28rpx;
  color: #666;
}

.list .title {
  padding-left: 32rpx;
  line-height: 50rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
}

.block {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #f5f5f5;
}

.block .face {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.block .center .sex {
  width: 26rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

.block .time {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
}

.point {
  position: absolute;
  width: 50rpx;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #666;
}

.point text {
  display: block;
  text-align: center;
  width: 30rpx;
  line-height: 30rpx;
  border-radius: 50%;
  margin-bottom: 6rpx;
}

.point text.cur {
  color: #fff;
  background-color: #09bb07;
}