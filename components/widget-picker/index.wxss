/* components/picker/index.wxss */

.picker {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 81;
  height: 0;
  transition: all 500ms ease;
  background-color: #fff;
  font-size: 28rpx;
}

.picker.show {
  height: 500rpx;
}

.picker .action-btn {
  padding: 0 32rpx;
  height: 74rpx;
  box-sizing: border-box;
  background-color: #ECEDF0;
  margin-bottom: 20rpx;
}

.picker .action-btn text {
  display: block;
  width: 100rpx;
  line-height: 74rpx;
}

.picker .action-btn text:first-child {
  float: left;
  text-align: left;
  color: #999;
}

.picker .action-btn text:last-child {
  float: right;
  text-align: right;
  color: #5577FB;
}

.picker .title {
  display: flex;
}

.picker .title text {
  flex: 1;
  text-align: center;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 80;
}

.selected {
  height: 100rpx;
  color: #5577FB;
}

.picker-row {
  width: 100%;
  height: 300rpx;
}

.picker-column {
  text-align: center;
}

.picker-column .block {
  line-height: 100rpx;
}
